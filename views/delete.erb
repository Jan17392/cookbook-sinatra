<div class="login">
  <h1>Remove a Recipe</h1>
    <form method="post" action="/destroy">
      <input type="number" name="item" placeholder="Index Number" required="required" />
        <button type="submit" class="btn btn-primary btn-block btn-large">Delete a Recipe</button>
    </form>
</div>

<div class="container">
  <br>
    <div id="products" class="row list-group">

        <% @recipes.each_with_index do |recipe, index| %>

          <div class="item  col-xs-4 col-lg-4">
              <div class="thumbnail">
                  <img class="group list-group-image" src="<%= recipe.picture %>" alt="" />
                  <div class="caption">
                      <h4 class="group inner list-group-item-heading">
                          <%= recipe.name %></h4>
                      <p class="group inner list-group-item-text">
                          <%= recipe.description %></p>
                      <div class="row">
                          <div class="col-xs-12 col-md-6">
                              <p class="lead">
                                  <%= recipe.rating %></p>
                          </div>
                      </div>
                      <div class="row">
                          <div class="col-xs-12 col-md-6">
                              <p class="index">
                                  <%= index %></p>
                          </div>
                      </div>
                  </div>
              </div>
          </div>

        <% end %>
    </div>
</div>
