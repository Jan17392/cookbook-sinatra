<div class="container">
  <br>
    <div id="products" class="row list-group">

        <% @results.each do |recipe| %>

          <div class="item  col-xs-4 col-lg-4">
              <div class="thumbnail">
                  <img class="group list-group-image" src="<%= recipe[:picture] %>" alt="" />
                  <div class="caption">
                      <h4 class="group inner list-group-item-heading">
                          <%= recipe[:name] %></h4>
                      <p class="group inner list-group-item-text">
                          <%= recipe[:description] %></p>
                      <div class="row">
                          <div class="col-xs-12 col-md-6">
                              <p class="lead">
                                  <%= recipe[:rating] %></p>
                          </div>
                      </div>
                  </div>
                  <form method="post" action="/import_selection">
                  <input type="hidden" name="name" value="<%= recipe[:name] %>"/>
                  <input type="hidden" name="description" value="<%= recipe[:description] %>"/>
                  <input type="hidden" name="rating" value="<%= recipe[:rating] %>"/>
                  <input type="hidden" name="picture" value="<%= recipe[:picture] %>"/>
                  <button type="submit" class="btn btn-primary btn-block btn-large">Add to Cookbook</button>
                  </form>
              </div>
          </div>

        <% end %>
    </div>
</div>
